#!/bin/sh
# Pre-commit hook to run quality checks
# This hook runs the same checks as GitHub Actions

echo "ğŸ” Running pre-commit checks..."

# Run the pre-merge checks
npm run pre-merge:checks

# Check if the command succeeded
if [ $? -ne 0 ]; then
    echo "âŒ Pre-commit checks failed!"
    echo "ğŸ’¡ Tip: Run 'npm run pre-merge:fix' to auto-fix linting and formatting issues"
    echo "ğŸ’¡ Then run 'npm run pre-merge' again to verify all checks pass"
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
